{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "*": ["*"]
    },
    "sourceMap": true,
    "resolveJsonModule": true // Add this line
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "tsc-alias": {
    "verbose": true,
    "resolveFullPaths": true,
    "fileExtensions": {
      "inputGlob": "{js,jsx,mjs}",
      "outputCheck": ["js", "json", "jsx", "mjs"]
    }
  }
}
